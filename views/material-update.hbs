<div class="update-material-container">
    <h2 class="update-material-title">Update Material</h2>
    <form class="update-material-form" action="/api/material/{{material.id}}/update" method="post">
        <div class="update-material-item">
            <label for="material-name" class="update-material-label">Material Name:</label>
            <input type="text" id="material-name" name="name" class="update-material-input" value={{material.name}} required>
        </div>
        <div class="update-material-item">
            <label for="material-quantity" class="update-material-label">Quantity:</label>
            <input type="number" id="material-quantity" name="quantity" class="update-material-input" value={{material.quantity}} required>
        </div>
        <div class="update-material-button-group">
            <button type="submit" class="update-material-save-button">Save</button>
            <a href="/api/materials" class="update-material-cancel-button">Cancel</a>
        </div>
    </form>
</div>
